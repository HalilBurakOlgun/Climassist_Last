@model Climassist_Last.Models.Requests

@{
    ViewData["Title"] = "Talep Detayı";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mt-5">
                <div class="card-header">
                    <h3 class="text-center">Talep Detayı</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Talep Durumu:</strong> @Model.Status</p>
                            <p><strong>Oluşturulma Tarihi:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                            <p><strong>Talep Tipi:</strong> @Model.RequestType</p>
                            <p><strong>Müşteri Tipi:</strong> @Model.ClientType</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Yedek Parça Tipi:</strong> @Model.SparePartType</p>
                            <p><strong>Bakım Aralığı:</strong> @Model.RecoveryTime</p>
                            <p><strong>Ünite Tipi:</strong> @Model.UnitType</p>
                        </div>
                    </div>
                    <div class="mt-3">
                        <p><strong>Mesaj:</strong> @Model.Message</p>
                    </div>
                </div>
            </div>
            <div class="text-center mt-3">
                <a href="@Url.Action("TrackRequest")" class="btn btn-primary">Başka Bir Talep Sorgula</a>
            </div>
        </div>
    </div>
</div>