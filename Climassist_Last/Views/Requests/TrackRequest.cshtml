@{
    ViewData["Title"] = "Talep Takip";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header">
                    <h3 class="text-center">Talep Takip</h3>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    <form asp-action="TrackRequest" method="post">
                        <div class="form-group">
                            <label>Takip Kodu</label>
                            <input type="text" name="trackingCode" class="form-control"
                                placeholder="6 haneli takip kodunuzu giriniz" required>
                        </div>
                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary">Talebi Görüntüle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>